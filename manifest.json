{
  "manifest_version": 3,
  "name": "AO3 Fanfic Tracker",
  "version": "1.3",
  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": ["https://archiveofourown.org/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}