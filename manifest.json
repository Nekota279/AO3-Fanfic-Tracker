{
  "manifest_version": 3,
  "name": "AO3 Fanfic Tracker",
  "version": "1.4",
  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": ["https://archiveofourown.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}