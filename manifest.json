{
  "manifest_version": 3,
  "name": "AO3 Fanfic Tracker",
  "version": "1.7",
  "description": "Track updates for AO3 works and series with direct chapter links.",
  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": ["https://archiveofourown.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}